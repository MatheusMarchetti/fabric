{
    "tasks": [
        {
            "type": "shell",
            "label": "Build Core",
            "windows": {
                "command": "${workspaceFolder}/engine/build.bat"
            },
            "options": {
                "cwd": "${workspaceFolder}/engine"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "Build Launcher",
            "windows": {
                "command": "${workspaceFolder}/launcher/build.bat"
            },
            "options": {
                "cwd": "${workspaceFolder}/launcher"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Build Everything",
            "windows": {
                "command": "${workspaceFolder}/build-all.bat",
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Clean Everything",
            "windows" : {
                "command": "${workspaceFolder}/clean-all.bat",
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ],
    "version": "2.0.0"
}